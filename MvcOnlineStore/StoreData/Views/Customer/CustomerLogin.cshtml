@model StoreData.ViewModels.Customer.CustomerView

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.IsAuthenticated)
{
    <h2>Hi,@ViewBag.Username</h2>
    <p><a href="@Url.Action("Logout","Customer")" class="btn">登出</a></p>
}
else
{
    <h2>會員登入</h2>
    using (Html.BeginForm("CustomerLogin", "Customer"))
    {
        <p>
            使用者名稱:@Html.TextBoxFor(model=>model.CustomerID, new { @class = "form-control", @type = "text", @name = "CustomerID"})<br />
                      @Html.ValidationMessageFor(model=>model.CustomerID, null, new { @class = "text-danger"})
                      

            密碼:@Html.TextBoxFor(model=>model.CustomerPassword, new { @class = "form-control", @type = "Password", @name = "CustomerPassword"})<br />
                @Html.ValidationMessageFor(model=>model.CustomerPassword, null, new { @class = "text-danger"})

        </p>
        <p><button type="submit"> 登入</button></p>
        <p style="color:red">@ViewBag.Error</p>
    }

}


