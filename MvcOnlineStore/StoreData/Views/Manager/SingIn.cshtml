@model StoreData.ViewModels.Manager.SingInViewModel

@{
    ViewBag.Title = "SingIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>管理者登入</h3>
    @using (Html.BeginForm())
    {
        <div class="form-group row">
            <label class="col-2 col-form-label">帳號</label>
            <div class="col-10 col-md-6">
                @Html.TextBoxFor(model => model.account, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">密碼</label>
            <div class="col-10 col-md-6">
                @Html.PasswordFor(model => model.password, new { @class = "form-control" })
            </div>
        </div>
        <button type="submit" class="btn btn-primary">登入</button>
    }
</div>


