@model StoreData.Models.Products

@{
    ViewBag.Title = "ProductItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12 col-sm-6 text-right">
            <img src='/FileUploads/@Model.Path' alt='' style="width:390px;height:390px;"/>
        </div>
        <div class="col-12 col-sm-4">
            <h1>@Model.ProductName</h1>
            <h4 class="mt-3">價格:@Model.UnitPrice</h4>
            <h4 class="mt-3">顏色:@Model.Color </h4>
            <h4 class="mt-3">筆心大小:@Model.Size </h4>
            <h4 class="mt-3">庫存:@Model.Stock </h4>
            <form class="form ">
                <label for="1" style="font-size: 25px">數量</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fa fa-minus" aria-hidden="true"></i>
                        </button>
                    </div>
                    <input type="text" class="form-control" style="width: 200px" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-secondary" style="width: 200px">
                    加入購物車
                    <i class="fa fa-shopping-cart mr-1" aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>
    <h3>商品描述</h3>
    <div class="row mt-5">
        <div class="col">
            <p>@Model.Instructions</p>
        </div>
    </div>
    <h3 class="mt-5">了解更多</h3>
    <div class="row text-center mt-5">
        <div class="col-12 mb-3">
            <img class="ite" src='https://placehold.it/800x600' alt='' />
        </div>
        <div class="col-12 mb-3">
            <img class="ite" src='https://placehold.it/800x600' alt='' />
        </div>
        <div class="col-12 mb-3">
            <img class="ite" src='https://placehold.it/800x600' alt='' />
        </div>
    </div>
</div>
