@model IEnumerable<StoreData.Models.Products>
@foreach (var item in Model)
{
    <div class="col-6 col-md-3 text-center mt-5 mb-3">
        <a class="mt-2" href="/Product/@item.ProductID" style="font-size: 20px;color: black;text-decoration:none;">
            <img class="pho mt-3" src='/FileUploads/@item.Path' alt='' style="width:150px;height:150px;"/>
        </a>
        <br />
        <a href="/Product/@item.ProductID">@item.ProductName</a>
        <br />
        <a>$@item.UnitPrice</a>
    </div>
}