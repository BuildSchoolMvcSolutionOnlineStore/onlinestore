@model IEnumerable<StoreData.Models.Customers>

@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href=@Url.RouteUrl(new {Controller = "Admin",Action = "" })>
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">會員管理</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">會員管理</h1>
    </div>
    @using (Html.BeginForm(new { Controller = "Admin", Action = "Members" }))
    {
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control input-md" placeholder="輸入會員編號" name="Id"/>
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-md">搜尋</button>
                </span>
            </div>
        </div>
    }
</div><!--/.row-->

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
            <thead>
                <tr>
                    <th>會員帳號</th>
                    <th>會員名稱</th>
                    <th>電話</th>
                    <th>Email</th>
                    <th>地址</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Count().Equals(0))
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerID</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Telephone</td>
                            <td>@item.CustomerMail</td>
                            <td>@item.Address</td>
                            <td>
                                <a class="btn btn-info" href="#">
                                    <i class="glyphicon glyphicon-edit icon-white"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger" href="#">
                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-center" colspan="6">
                            資料庫內查無資料
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

