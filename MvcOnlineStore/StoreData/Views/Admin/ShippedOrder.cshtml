@model StoreData.ViewModels.Manager.OrderView

@{
    ViewBag.Title = "ShippedOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href=@Url.RouteUrl(new {Controller = "Admin",Action = "" })>
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">已出貨訂單列表</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">已出貨訂單列表</h1>
    </div>
    @using (Html.BeginForm(new { Controller = "Admin", Action = "ShippedOrder" }))
    {
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control input-md" placeholder="輸入訂單編號" name="Id" value="@Model.Search" />
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-md">搜尋</button>
                </span>
            </div>
        </div>
    }
</div><!--/.row-->

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
            <thead>
                <tr>
                    <th>訂單ID</th>
                    <th>客戶姓名</th>
                    <th>訂單時間</th>
                    <th>付款方式</th>
                    <th>運送方式</th>
                    <th>金額</th>
                    <th>狀態</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.OrderDate</td>
                        <td>@item.PaymentMethod</td>
                        <td>@item.DeliveryMethod</td>
                        <td>@item.Amount</td>
                        <td>未出貨</td>
                        <td>
                            <a class="btn btn-info" href="#">
                                <i class="glyphicon glyphicon-edit icon-white"></i>
                                查看
                            </a>
                            <a class="btn btn-success" href="#" data-toggle="modal" data-target="#bs-example-modal-sm-shipping-@item.OrderId">
                                <i class="glyphicon glyphicon-refresh icon-white"></i>
                                到貨
                            </a>
                            <div class="modal fade" id="bs-example-modal-sm-shipping-@item.OrderId" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                                <div class="modal-dialog modal-sm" role="document" style="width: 300px;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">已到貨確認</h4>
                                        </div>
                                        @using (Html.BeginForm("Arrival", "Admin"))
                                        {
                                            <input name="orderId" type="hidden" value=@item.OrderId />
                                            <input name="action" type="hidden" value=@ViewContext.RouteData.Values["action"] />
                                            <div class="modal-body text-center">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                                                <button type="submit" class="btn btn-success">到貨</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div><!--shipping modal-->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-12 text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.Paging.NowPage > 1)
                {
                    <li>
                        <a href=@Url.RouteUrl(new { Controller = "Admin", Action = "UnDeliveryOrder", Page = Model.Paging.NowPage - 1, Id = Model.Search }) aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="disabled">
                        <a aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                @for (var page = (Model.Paging.NowPage - 6); page < (Model.Paging.NowPage + 6); page++)
                {
                    if ((page > 0) && (page <= Model.Paging.MaxPage))
                    {
                        if (page == Model.Paging.NowPage)
                        {
                            <li class="active"><a>@page</a></li>
                        }
                        else
                        {
                            <li><a href=@Url.RouteUrl(new { Controller = "Admin", Action = "UnDeliveryOrder", Page = page, Id = Model.Search })>@page</a></li>
                        }
                    }
                }
                @if (Model.Paging.NowPage < Model.Paging.MaxPage)
                {
                    <li>
                        <a href=@Url.RouteUrl(new { Controller = "Admin", Action = "UnDeliveryOrder", Page = Model.Paging.NowPage + 1, Id = Model.Search }) aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="disabled">
                        <a aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
