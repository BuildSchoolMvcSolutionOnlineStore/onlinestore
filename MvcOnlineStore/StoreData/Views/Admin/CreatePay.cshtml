@model StoreData.Models.PaymentMethods
@{
    ViewBag.Title = "CreatePay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href=@Url.RouteUrl(new {Controller = "Admin",Action = "" })>
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">新增付款方式</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">新增付款方式</h1>
    </div>
</div><!--/.row-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">新增付款方式</div>
            <div class="panel-body">
                @using (Html.BeginForm("CreatePay", "Admin"))
                {
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PaymentMethod)
                            @Html.TextBoxFor(model => model.PaymentMethod, new { @class = "form-control", @placeholder = "輸入名稱" })
                            @Html.ValidationMessageFor(model => model.PaymentMethod, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">新增</button>
                }
            </div>
        </div>
    </div>
</div>