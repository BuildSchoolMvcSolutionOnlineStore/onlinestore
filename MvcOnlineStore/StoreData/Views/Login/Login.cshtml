@model StoreData.ViewModels.Login.LoginView
@{
    Layout = null ;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    @Styles.Render("~/Admin/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">登入</div>
                <div class="panel-body">
                    @using (Html.BeginForm("LoginCheck", "Login"))
                    {
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.ManagerID, new { @class = "form-control", @placeholder = "ManagerID", @name = "ManagerID", @type = "ManagerID" })
                                    @Html.ValidationMessageFor(model => model.ManagerID, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.ManagerPassword, new { @class = "form-control", @placeholder = "Password", @name = "Password", @type = "Password" })
                                    @Html.ValidationMessageFor(model => model.ManagerPassword, null, new { @class = "text-danger" })
                                </div>
                                <button class="btn btn-primary" type="submit">登入</button>
                            </fieldset>
                        </form>
                    }
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->
    @Scripts.Render("~/Admin/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
